<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
  	<meta name='viewport' content='width=device-width'>

    <title>{{ site.title }}</title>
    <meta name='description' content={{ site.description }}>
    <meta name="theme-color" content="#ffffff"/>

    <link rel="icon" type="image/png" sizes="32x32" href="/assets/img/favicon/favicon-32x32.png">
    <link rel="apple-touch-icon" href="/assets/img/favicon/apple-touch-icon.png">
    <link rel="manifest" href="/manifest.json" />

    <link href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css" rel="stylesheet">
    <link href="/assets/styles/tailwind.css" rel="stylesheet" />
    <link href="/assets/styles/index.css" rel="stylesheet" />
    <script>
      const isDarkMode = () => localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches);
      if (isDarkMode()) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
    </script>
    <script data-site="5ead4aa534d03c763dddf877501ead70">  
      (function(){const siteId=document.currentScript?.dataset.site;if(!siteId)return;function getScreenCategory(){const width=screen.width;if(width<768)return'sm';if(width<1024)return'md';if(width<1440)return'lg';return'xl'}  if(navigator.sendBeacon){const siteId=document.currentScript?.dataset.site;const data=new URLSearchParams();data.append("path",window.location.pathname.replace(/.html$/,''));data.append("siteId",siteId);data.append("referrer",document.referrer||null);data.append("screenSize",getScreenCategory());if(window.location.origin.includes("localhost")){navigator.sendBeacon("http://localhost:5000/collect",data)}else{navigator.sendBeacon("https://vero-analytics-68kl4.ondigitalocean.app/collect",data)}}})()    
    </script>    
  </head>

  <body class="dark:text-white dark:bg-black">
    {{ content }}
    
  <script>
    document.getElementById("toggleDarkMode").addEventListener("click", function() {
      if (isDarkMode()) {
        localStorage.theme = 'light'
        document.documentElement.classList.remove('dark')
      } else {
        localStorage.theme = 'dark'
        document.documentElement.classList.add('dark')
      }
    });
  </script>
  </body>
</html>